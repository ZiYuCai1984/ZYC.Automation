<UserControl x:Class="ZYC.Automation.Core.DragDrop.DragDropPickerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:core="clr-namespace:ZYC.Automation.Core"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             AllowDrop="True"
             DragEnter="OnDragEnter"
             DragOver="OnDragOver"
             DragLeave="OnDragLeave"
             Drop="OnDrop"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Border x:Name="DropBorder"
            BorderBrush="{DynamicResource MahApps.Brushes.Validation4}"
            SnapsToDevicePixels="True">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="Transparent" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsDragOver}" Value="True">
                        <Setter Property="BorderBrush" Value="#3B82F6"/>
                        <Setter Property="Background" Value="#EFF6FF"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <core:HybridIcon FontSize="48"
                                 Width="64"
                                 Height="64"
                                 Icon="{Binding Icon}"
                                 VerticalAlignment="Center"
                                 Margin="0 0 32 0" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock FontSize="14"
                               FontWeight="SemiBold"
                               Text="{Binding Title}" 
                               TextTrimming="CharacterEllipsis"/>
                    <TextBlock Margin="0,6,0,0"
                               FontSize="12"
                               Opacity="0.85"
                               Text="{Binding Hint}" 
                               TextTrimming="CharacterEllipsis"/>
                    <TextBlock Margin="0,10,0,0"
                               FontSize="12"
                               Opacity="0.75"
                               Text="{Binding SelectedSummary}" 
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>

            </StackPanel>

            <Rectangle
                Grid.Column="0"
                Fill="Transparent"
                Cursor="Hand"
                MouseUp="OnOverlayMouseLeftButtonUp"/>

        </Grid>
    </Border>
</UserControl>