<UserControl x:Class="ZYC.Automation.Core.Page.ComingSoonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:localizations="clr-namespace:ZYC.Automation.Core.Localizations"
             xmlns:markupEx="clr-namespace:ZYC.Automation.Core.MarkupEx"
             xmlns:commands="clr-namespace:ZYC.Automation.Core.Commands"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center"
          Margin="24"
          MaxWidth="520">
        <StackPanel HorizontalAlignment="Center">
            <iconPacks:PackIconMaterial Kind="HammerWrench"
                                        Width="96"
                                        Height="96"
                                        HorizontalAlignment="Center"
                                        Foreground="{DynamicResource MahApps.Brushes.Gray3}"
                                        AutomationProperties.Name="Under development" />

            <TextBlock Text="{localizations:L Coming soon}"
                       Margin="0,16,0,6"
                       FontSize="28"
                       FontWeight="SemiBold"
                       TextAlignment="Center"
                       Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}" />

            <TextBlock Text="{localizations:L This feature is under development. Track progress on GitHub.}"
                       FontSize="14"
                       Opacity="0.75"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}" />

            <Button Margin="0,18,0,0"
                    Padding="14,8"
                    HorizontalAlignment="Center"
                    Command="{markupEx:LifetimeScopeResolve commands:OpenGitHubCommand}">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="Github"
                                                Width="16"
                                                Height="16"
                                                Margin="0,0,8,0" />
                    <TextBlock Text="{localizations:L View on GitHub}" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>

</UserControl>