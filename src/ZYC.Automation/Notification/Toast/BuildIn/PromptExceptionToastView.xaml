<toast:ToastBase x:Class="ZYC.Automation.Notification.Toast.BuildIn.PromptExceptionToastView"
                 x:ClassModifier="internal"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:toast="clr-namespace:ZYC.Automation.Core.Notification.Toast;assembly=ZYC.Automation.Core"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 mc:Ignorable="d"
                 d:DesignHeight="450" d:DesignWidth="800">
    <Border
        CornerRadius="12"
        Padding="12"
        Margin="0"
        ClipToBounds="True"
        Background="{DynamicResource MahApps.Brushes.Flyout.Background}"
        BorderBrush="{DynamicResource MahApps.Brushes.Control.Border}"
        BorderThickness="1"
        SnapsToDevicePixels="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <iconPacks:PackIconMaterial Grid.Column="0"
                                        Kind="BugOutline"
                                        Width="18"
                                        Height="18"
                                        VerticalAlignment="Center"
                                        Opacity="0.9" />
            <TextBlock Grid.Column="2"
                       Text="{Binding Exception.Message}"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="13"
                       Opacity="0.95" />
        </Grid>
    </Border>
</toast:ToastBase>