<Window x:Class="ZYC.Automation.BusyWindow.AppBusyWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:converters="clr-namespace:ZYC.Automation.Core.Converters;assembly=ZYC.Automation.Core"
        xmlns:busyWindow="clr-namespace:ZYC.Automation.BusyWindow"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        ShowActivated="True"
        WindowStyle="SingleBorderWindow"
        Height="120"
        Width="400"
        Title="{x:Static busyWindow:AppBusyWindow.DefaultTitle}"
        x:Name="Root">
    <Grid>
        <StackPanel Margin="16">
            <TextBlock Text="{Binding StatusText, ElementName=Root}">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StatusText, ElementName=Root}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Border BorderBrush="Gray"
                    Margin="0,16,0,8"
                    Visibility="{Binding ShowProgress, ElementName=Root, Converter={converters:BoolToVisibilityConverter}}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderThickness" Value="1" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsProgressIndeterminate, ElementName=Root}" Value="True">
                                <Setter Property="BorderThickness" Value="0" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <ProgressBar Height="12"
                             IsIndeterminate="{Binding IsProgressIndeterminate, ElementName=Root}"
                             Minimum="0"
                             Maximum="1"
                             Value="{Binding ProgressValue, ElementName=Root}" />
            </Border>
        </StackPanel>
    </Grid>
</Window>