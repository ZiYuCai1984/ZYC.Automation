@page
@model ZYC.Automation.Modules.BlazorDemo.Pages.Account.LoginModel
@{
    Layout = null;
}

<style>
    :root {
        --bg: #f6f7fb;
        --card: #ffffff;
        --text: #0f172a;
        --muted: #475569;
        --muted2: #64748b;
        --border: rgba(15,23,42,.10);
        --shadow: 0 20px 60px rgba(2,6,23,.12);
        --focus: rgba(37,99,235,.18);
        --primary: #2563eb;
        --primary2: #1d4ed8;
        --danger: #dc2626;
    }

    * {
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
    }

    body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        color: var(--text);
        background: radial-gradient(1000px 600px at 15% 0%, rgba(37,99,235,.10), transparent 55%), radial-gradient(900px 520px at 90% 10%, rgba(16,185,129,.10), transparent 55%), linear-gradient(180deg, #f8fafc, var(--bg));
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px;
    }

    .wrap {
        width: 100%;
        max-width: 420px;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 14px;
    }

    .logo {
        width: 44px;
        height: 44px;
        border-radius: 14px;
        background: linear-gradient(135deg, rgba(37,99,235,.95), rgba(16,185,129,.75));
        box-shadow: 0 14px 35px rgba(2,6,23,.12);
    }

    .brand h1 {
        margin: 0;
        font-size: 18px;
        font-weight: 800;
        letter-spacing: .2px;
    }

    .brand p {
        margin: 2px 0 0 0;
        font-size: 13px;
        color: var(--muted);
    }

    .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 18px;
        padding: 22px 22px 18px;
        box-shadow: var(--shadow);
    }

    .title {
        margin: 0 0 6px 0;
        font-size: 18px;
        font-weight: 800;
    }

    .subtitle {
        margin: 0 0 18px 0;
        font-size: 13px;
        color: var(--muted);
        line-height: 1.5;
    }

    .field {
        margin-bottom: 14px;
    }

    .label-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 8px;
    }

    label {
        font-size: 13px;
        color: var(--muted);
    }

    .input {
        width: 100%;
        height: 42px;
        border-radius: 12px;
        border: 1px solid rgba(15,23,42,.14);
        background: #ffffff;
        color: var(--text);
        padding: 0 12px;
        outline: none;
        transition: box-shadow .18s ease, border-color .18s ease;
    }

        .input::placeholder {
            color: rgba(15,23,42,.35);
        }

        .input:focus {
            border-color: rgba(37,99,235,.55);
            box-shadow: 0 0 0 4px var(--focus);
        }

    .row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin: 10px 0 16px 0;
        color: var(--muted);
        font-size: 12.5px;
    }

    .check {
        display: flex;
        align-items: center;
        gap: 8px;
        user-select: none;
    }

        .check input {
            width: 16px;
            height: 16px;
            accent-color: var(--primary);
        }

    .btn {
        width: 100%;
        height: 44px;
        border-radius: 12px;
        border: 1px solid rgba(37,99,235,.18);
        background: linear-gradient(180deg, var(--primary), var(--primary2));
        color: white;
        font-weight: 800;
        letter-spacing: .2px;
        cursor: pointer;
        box-shadow: 0 14px 30px rgba(37,99,235,.18);
        transition: transform .06s ease, filter .18s ease;
    }

        .btn:hover {
            filter: brightness(1.03);
        }

        .btn:active {
            transform: translateY(1px);
        }

    .error {
        margin-top: 10px;
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(220,38,38,.25);
        background: rgba(220,38,38,.06);
        color: var(--danger);
        font-size: 13px;
        line-height: 1.4;
    }

    .footer {
        margin-top: 12px;
        font-size: 12px;
        color: rgba(15,23,42,.45);
        text-align: center;
    }
</style>

<div class="wrap">
    <div class="brand">
        <div class="logo" aria-hidden="true"></div>
        <div>
            <h1>ZYC Automation</h1>
            <p>Sign in to continue</p>
        </div>
    </div>

    <div class="card">
        <div class="title">Login</div>
        <div class="subtitle">Demo account is shown on the right.</div>

        <form method="post" autocomplete="on">
            @Html.AntiForgeryToken()

            <div class="field">
                <div class="label-row">
                    <label for="Username">Username</label>
                </div>
                <input id="Username" class="input" name="Username"
                       placeholder="Enter username (@Model.DemoUser)" autocomplete="username"/>
            </div>

            <div class="field">
                <div class="label-row">
                    <label for="Password">Password</label>
                </div>
                <input id="Password" class="input" name="Password" type="password"
                       placeholder="Enter password (@Model.DemoPassword)" autocomplete="current-password"/>
            </div>

            <div class="row">
                <label class="check">
                    <input type="checkbox" name="RememberMe"/>
                    Remember me
                </label>
                <span>Tip: press Enter</span>
            </div>

            <button class="btn" type="submit">Login</button>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error">
                    @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@e.ErrorMessage</div>
                    }
                </div>
            }

            <div class="footer">© @DateTime.Now.Year Powered by ChatGPT 5.2</div>
        </form>
    </div>
</div>