<toast:ToastBase x:Class="ZYC.Automation.Modules.Update.UI.Toast.PromptNewProductToastView"
                 x:ClassModifier="internal"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:toast="clr-namespace:ZYC.Automation.Core.Notification.Toast;assembly=ZYC.Automation.Core"
                 xmlns:core="clr-namespace:ZYC.Automation.Core;assembly=ZYC.Automation.Core"
                 xmlns:localizations="clr-namespace:ZYC.Automation.Core.Localizations;assembly=ZYC.Automation.Core"
                 xmlns:buttons="clr-namespace:ZYC.Automation.Core.Buttons;assembly=ZYC.Automation.Core"
                 xmlns:markupEx="clr-namespace:ZYC.Automation.Core.MarkupEx;assembly=ZYC.Automation.Core"
                 xmlns:commands="clr-namespace:ZYC.Automation.Core.Commands;assembly=ZYC.Automation.Core"
                 mc:Ignorable="d"
                 d:DesignHeight="450" d:DesignWidth="800"
                 DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Margin="0 0 0 16"
              VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <core:HybridIcon
                Icon="Update"
                Width="18" Height="18"
                VerticalAlignment="Center"
                Opacity="0.9"
                VerticalContentAlignment="Top" />
            <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="13"
                       Opacity="0.95"
                       Margin="8 0 0 0">
                <Run Text="{localizations:L New version available}" />
                <Run Text=" -> " />
                <Run Text="{Binding NewProduct.Version,Mode=OneWay}" />
            </TextBlock>
        </Grid>

        <buttons:IconButton Grid.Row="1"
                            Kind="KeyboardReturn"
                            Text="{localizations:L Go to update page}"
                            Command="{markupEx:LifetimeScopeResolve commands:NavigateCommand}"
                            CommandParameter="{Binding TargetUri}"
                            HorizontalAlignment="Right" />

    </Grid>
</toast:ToastBase>